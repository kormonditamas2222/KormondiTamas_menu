<Window x:Class="menu.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:menu"
        mc:Ignorable="d"
        Title="Gyümölcsök" Height="450" Width="800">
    <DockPanel LastChildFill="False">
        <Menu DockPanel.Dock="Top">
            <MenuItem Header="_Fájl">
                <MenuItem Header="_Megnyitás" Click="MenuItemOpen_Click"/>
                <MenuItem Header="_Mentés" Click="MenuItemSave_Click"/>
                <Separator/>
                <MenuItem Header="_Kilépés" Click="MenuItemExit_Click"/>
            </MenuItem>
            <MenuItem Header="_Súgó">
                <MenuItem Header="_Névjegy" Click="MenuItemAbout_Click"/>
            </MenuItem>
        </Menu>
        <ListBox x:Name="lb_1" Width="100"/>
        <TextBox x:Name="tb_be" TextWrapping="Wrap" Text="(Új elem)" Width="100"/>
        <Button Content="Bevitel" Width="NaN" Height="50" Click="Button_Click"/>
    </DockPanel>

</Window>
